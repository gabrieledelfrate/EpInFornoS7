@model EpInForno.Models.RegistrazioneViewModel

@{
    ViewBag.Title = "Registrazione";
}

<h2>Registrazione</h2>

@using (Html.BeginForm("Registrazione", "Registrazione", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Nome)
        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Cognome)
        @Html.TextBoxFor(m => m.Cognome, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Cognome, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Telefono)
        @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Telefono, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Indirizzo, "Indirizzo completo di città", new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Indirizzo, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Indirizzo, "", new { @class = "text-danger" })
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Citta)
        @Html.TextBoxFor(m => m.Citta, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Citta, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PasswordUtente)
        @Html.PasswordFor(m => m.PasswordUtente, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.PasswordUtente, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-success">Registrati</button>
}